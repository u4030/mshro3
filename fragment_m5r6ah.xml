<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.m5r6ah.M5r6ahFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p_p_3_1"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_1"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="كبس بكسات"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/p_p_3_2"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_2"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:gravity="center|left"
            android:text="كبس بيل" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p_p_3_3"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_3"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="قص برغي عادي" />

        <TextView
            android:id="@+id/p_p_3_4"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_4"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:gravity="center|left"
            android:text="قص برغي على الاكسجين" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p_p_3_5"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_5"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="خراطة بلاطات حجم عادي" />

        <TextView
            android:id="@+id/p_p_3_6"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_weight="4"
            android:ems="10"
            android:gravity="center"
            android:hint="السعر"
            />

        <CheckBox
            android:id="@+id/ch_3_6"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:gravity="center|left"
            android:text="خراطة بلاطات حجم كبير" />
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>